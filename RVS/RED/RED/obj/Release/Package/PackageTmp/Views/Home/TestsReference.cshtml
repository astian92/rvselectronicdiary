@model Dictionary<string, IGrouping<Guid, RED.Models.DataContext.ProductTest>>

@if(Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Тест</th>
                <th>Брой</th>
                <th>Клиент</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="group">
                    <td>@item.Key</td>
                    <td colspan="2">@item.Value.Count()</td>
                @foreach (var productTest in item.Value)
                {
                    <tr>
                        <td>@productTest.Product.Name</td>
                        <td>@productTest.Product.Quantity</td>
                        <td>@productTest.Product.Diary.Client.Name</td>
                    </tr>
                }
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="req-error-msg">Не са намерени резултати</div>
}
