@model Dictionary<string, IGrouping<string, RED.Models.Dashboard.TestsReferenceW>>

@if(Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>Тест</th>
                <th>Брой</th>
                <th>Клиент</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="group">
                    <td>@item.Key</td>
                    <td colspan="2">@item.Value.Count()</td>
                @foreach (var productTest in item.Value)
                {
                    <tr>
                        <td>@productTest.ProductName</td>
                        <td>@productTest.ProductQuantity</td>
                        <td>@productTest.ClientName</td>
                    </tr>
                }
                </tr>
            }
        </table>
    </div>
}
else
{
    <div class="req-error-msg">Не са намерени резултати</div>
}
