@model IEnumerable<RED.Models.ElectronicDiary.ArchivedDiaryW>
@using System.Globalization;

<div class="panel-group" id="accordion">
    @foreach (var item in Model)
    {
        <div class="panel panel-default">
            <a data-toggle="collapse" data-parent="#accordion" href="#@item.Id" aria-expanded="false" class="text-muted collapsed">
                <div class="panel-heading">
                    <h5 class="panel-title">
                        №: @item.Number / @item.LetterInfo /
                        Клиент:  @item.Client
                        <i class="fa fa-archive pull-right"></i>
                        @*<i class="fa fa-clipboard pull-right"></i>*@
                    </h5>
                </div>
            </a>
            <div id="@item.Id" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                <div class="panel-body">
                    <div class="animated fadeInDown">
                        <div class="ibox-content">
                            <div class="row">
                                <h4 class="text-navy text-center">@item.LetterInfo</h4>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <h5>
                                        От:
                                        <strong>@item.Client</strong><br>
                                    </h5>
                                    <h5>
                                        Възложител:
                                        <strong>@Html.DisplayFor(modelItem => item.Contractor)</strong><br>
                                    </h5>
                                </div>

                                <div class="col-sm-6 text-right">
                                    <h5>№: <strong>@item.Number</strong></h5>
                                    <h5>Дата на приемане: <strong>@item.AcceptanceDateAndTime.ToString("dd.M.yyyy", CultureInfo.InvariantCulture)</strong></h5>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <h4 class="text-navy text-center">Заявка №: @item.Number</h4>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>№</th>
                                                <th class="text-left">Наименoвание</th>
                                                <th class="text-center">Количество</th>
                                                <th class="text-right">Показател за изпитване</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var product in item.ArchivedProducts.OrderBy(p => p.Number))
                                            {
                                                <tr>
                                                    <td>@product.Number</td>
                                                    <td>
                                                        <span>@product.Name</span>
                                                    </td>
                                                    <td class="text-center">
                                                        <span>@product.Quantity</span>
                                                    </td>
                                                    @{ int i = 0; }
                                                    @foreach (var test in product.ArchivedProductTests.OrderBy(pt => pt.TestName))
                                                    {
                                                        if (i == 0)
                                                        {
                                                            <td class="text-right">
                                                                <span>@test.TestName</span>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                        <tr>
                                                            <td colspan="4" style="text-align: right">
                                                                <span>@test.TestName</span>
                                                            </td>
                                                        </tr>
                                                        }

                                                        i++;
                                                    }
                                                    </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row" style="margin-bottom:20px;">
                                <div class="col-md-6">
                                    <h5>Срок на изпитване (дни): <strong></strong></h5>

                                    <div class="status-container">
                                        <h5>Приел пробата: <strong>@item.RequestAcceptedBy</strong></h5>
                                        <h5>Дата на приемане: <strong>@item.RequestDate.ToString("dd.M.yyyy", CultureInfo.InvariantCulture)</strong></h5>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h5 class="text-right">Протокол № / Дата на издаване: @item.Number / @item.ProtocolIssuedDate.ToString("dd.M.yyyy", CultureInfo.InvariantCulture) <strong></strong></h5>
                                    <h5 class="text-right">Получил протокола: <strong></strong></h5>
                                    <h5 class="text-right">Забележка: @item.Remark<strong></strong></h5>
                                </div>
                            </div>

                            <div class="ibox-content comment-container" style="margin-bottom:10px;">
                                <div class="form-group">
                                    <div class="col-md-12 no-padding">
                                        <textarea disabled class="comment form-control message-input" name="Comment">@item.Comment</textarea>
                                    </div>
                                    @*<div class="col-md-2">
                                        <a class="save-comment btn btn-primary @(item.Comment == null ? "" : "collapse")" onclick="saveComment('@item.Id')"><i class="fa fa-save"></i> Запази</a>
                                        <a class="close-comment btn btn-primary @(item.Comment == null ? "" : "collapse")" style="margin-top:10px;" onclick="closeComment('@item.Id')"><i class="fa fa-times-circle"> Откажи</i></a>
                                        <a class="edit-comment btn btn-primary @(item.Comment == null ? "collapse" : "")" onclick="editComment('@item.Id')"><i class="fa fa-edit"></i> Промени</a>
                                    </div>*@
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="row">
                                @*@if (item. == null || !item.Request.IsAccepted)
                                {
                                    <div class="text-right">
                                        <a class="btn btn-primary" href="/Diary/Edit?id=@item.Id">
                                            <i class="fa fa-edit"></i>
                                            Промени
                                        </a>
                                        <a class="btn-delete btn btn-primary" href="@item.Id" data-toggle="modal" data-target="#myModal">
                                            <i class="fa fa-trash"></i>
                                            Изтрий
                                        </a>
                                    </div>
                                }*@

                                @*@if (item.Request != null && item.Request.Protocols.Any())
                                {
                                    <div class="text-right">
                                        <a class="btn btn-primary btn-archive" href="/Diary/Archive?id=@item.Id">
                                            <i class="fa fa-archive"></i>
                                            Архивирай
                                        </a>
                                    </div>
                                }*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>