@model RED.Models.ElectronicDiary.DiaryW

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Затвори</span></button>
    <i class="fa fa-archive modal-icon"></i>
    <h4 class="modal-title">Архивирай</h4>
    <small class="font-bold">Сигурни ли сте, че искате да архивирате това писмо от дневника?</small>
</div>
<div class="modal-body">
    <dl class="dl-horizontal">
        <dt>
            Писмо
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LetterInfo)
        </dd>
        <dt>
            От
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt>
            Възложител
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contractor)
        </dd>
    </dl>
</div>
<div class="modal-footer">
    <div class="form-actions no-color">
        <button buttonid="@Model.Id" class="btn btn-primary btn-archive" onclick="ArchiveDiary(this)" data-dismiss="modal">
            Да
        </button>
        <button type="button" class="btn btn-white btn-padding-lg" data-dismiss="modal">Не</button>
    </div>
</div>
