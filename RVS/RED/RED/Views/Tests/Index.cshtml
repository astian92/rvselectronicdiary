@model IEnumerable<RED.Models.ElectronicDiary.Tests.TestW>

@{
    ViewBag.Title = "Tests";
}

<h2>Изследвания</h2>

<p>
    @Html.ActionLink("Създай нов", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestMethods)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.AcredetationLevel.Level)*@
                Ниво
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temperature)
            </th>
            <th></th>
        </tr>


        @{
            var categories = Model.Select(m => m.TestCategory).Distinct();
        }

        @foreach (var category in categories)
        {
            <tr>
               <td colspan="5">
                   <span style="font-weight: bold">@category.Name</span>
               </td> 
            </tr>
            
            foreach (var item in Model.Where(t => t.TestCategory == category))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestMethods)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AcredetationLevel.Level)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Temperature)
                    </td>
                    <td>
                        <a href="/Tests/Edit?id=@item.Id">
                            <i class="fa fa-edit"></i>
                            Промени
                        </a>|
                        <a class="btn-delete" href="@item.Id" data-toggle="modal" data-target="#myModal">
                            <i class="fa fa-trash"></i>
                            Изтрий
                        </a>
                    </td>
                </tr>
            }
        }

    </table>
</div>
<script>
        $('.btn-delete').click(function () {
            var id = $(this).attr('href');
            var url = '/Tests/Delete?id=' + id;
            $.ajax({
                type: "GET",
                url: url,
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (view) {
                    $('.modal-content').html(view);
                }
            });

        });
</script>
<div class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
        </div>
    </div>
</div>
