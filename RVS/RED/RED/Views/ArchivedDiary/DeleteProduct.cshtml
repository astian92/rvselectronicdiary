@model RED.Models.ElectronicDiary.ArchivedWrappers.ArchivedProductW

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Затвори</span></button>
    <i class="fa fa-beer modal-icon"></i>
    <h4 class="modal-title">Изтрий</h4>
    <small class="font-bold">Сигурни ли сте, че искате да изтриете тoзи продукт?</small>
</div>
<div class="modal-body">
    <h4 class="text-center">Този продукт е свързан със следните изследвания:</h4>
    <ol style="padding-left: 86px;">
        @foreach(var test in Model.ArchivedTests)
        {
            <li>@test.TestName</li>
        }
    </ol>
</div>
<div class="modal-footer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Да" class="btn btn-primary btn-padding-lg" />
            <button type="button" class="btn btn-white btn-padding-lg" data-dismiss="modal">Не</button>
        </div>
    }
</div>

