@model RED.Models.ElectronicDiary.ArchivedWrappers.ArchivedProtocolResultW

<h2>Добави</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Резултат</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <input type="hidden" name="ArchivedDiaryId" value="@ViewBag.ADiaryId" />
        <input type="hidden" name="ArchivedProductTestId" value="@ViewBag.AProductTestId" />

        <div class="form-group">
            @Html.LabelFor(model => model.ResultNumber, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.ResultNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ResultNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Results, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Results, new {  @class = "form-control tarea" })
                @Html.ValidationMessageFor(model => model.Results, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="button" value="±" class="btn btn-xs btn-info" style="padding:0 22px;" for="Results" onclick="addSign(this)" />
                <input type="button" value="°" class="btn btn-xs btn-info" style="padding:0 22px;" for="Results" onclick="addSign(this)" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <a href="/ArchivedDiary/ProtocolResultsIndex?aproductTestId=@ViewBag.AProductTestId" class="btn btn-default">Отказ</a>
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </div>
    </div>
}