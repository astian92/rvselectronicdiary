@model RED.Models.ElectronicDiary.Requests.RequestW

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Затвори</span></button>
    <i class="fa fa-users modal-icon"></i>
    <h4 class="modal-title">Изтрий</h4>
    <small class="font-bold">Сигурни ли сте, че искате да откажете тази заявка?</small>
</div>
<div class="modal-footer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="button" class="btn btn-white" data-dismiss="modal">Отказ</button>
            <input id="@Model.Id" type="button" value="Изтрий" class="btn btn-primary" onclick="DenyRequest(this)" />
        </div>
    }
</div>

