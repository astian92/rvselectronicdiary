@model RED.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@{
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">РВС</h1>

        </div>
        <h3>Добре дошли</h3>
        <p>в Електрронния дневник</p>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "m-t", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Потребителско име" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Парола" required="">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Вход</button>
        }
        <p class="m-t"> <small>All rights reserved mINC © 2015</small> </p>
    </div>
</div>