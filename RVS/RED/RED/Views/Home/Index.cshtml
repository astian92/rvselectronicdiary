@model RED.Models.Dashboard.DashboardW
@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/Our/custom-pagination.css" rel="stylesheet" />
<link href="~/Content/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/Our/datatables-changes.css" rel="stylesheet" />

<div class="wrapper-content">
    <div class="row border-bottom">
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-success pull-right">Всички</span>
                    <h5>Клиенти</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@Model.ClientsNum</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-info pull-right">Всички</span>
                    <h5>Писма</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@Model.DiariesNum</h1>
                    @*<div class="stat-percent font-bold text-info">20% <i class="fa fa-level-up"></i></div>
                    <small>New orders</small>*@
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Приети</span>
                    <h5>Заявки</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@Model.AcceptedRequestsNum</h1>
                    @*<div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>*@
                    <small>приети заявки</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-danger pull-right">Завършени</span>
                    <h5>Заявки</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@Model.CompletedRequestsNum</h1>
                    @*<div class="stat-percent font-bold text-danger">38% <i class="fa fa-level-down"></i></div>*@
                    <small>приключени заявки</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 no-padding">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div data-toggle="buttons" class="btn-group pull-right">
                        <label class="btn btn-daily btn-sm btn-white"> <input type="radio" id="option1" name="options"> Дневно </label>
                        <label class="btn btn-monthly btn-sm btn-white active"> <input type="radio" id="option2" name="options"> Месечно </label>
                        <label class="btn btn-yearly btn-sm btn-white"> <input type="radio" id="option3" name="options"> Годишно </label>
                    </div>
                    <h5 style="margin-top:5px;">Изследвания</h5>
                    <div class="clearfix"></div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-xs-12 tests-reference no-padding">
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Our/Dashboard.js"></script>